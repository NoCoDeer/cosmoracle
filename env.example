# Общие настройки
NODE_ENV=development
TZ=UTC

# Настройки базы данных PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cosmooracle
DB_USER=postgres
DB_PASSWORD=postgres_password

# Настройки Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Настройки JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_key

# Настройки портов
FRONTEND_PORT=3000
BACKEND_PORT=3001
ADMIN_PORT=3002
ASTRO_SERVICE_PORT=3003

# Настройки OpenRouter (для Llama 4)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=llama-4-70b-instruct

# Настройки платежных систем
# Stripe
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# YooKassa
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_SECRET_KEY=your_yookassa_secret_key

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Настройки OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Настройки SMTP для отправки email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@cosmooracle.com
SMTP_FROM_NAME=CosmoOracle

# Настройки PWA
PWA_APP_NAME=CosmoOracle
PWA_SHORT_NAME=CosmoOracle
PWA_DESCRIPTION=Астрологический сервис с Таро и ИИ
PWA_THEME_COLOR=#0f3460
PWA_BACKGROUND_COLOR=#ffffff

# Настройки реферальной системы
REFERRAL_BONUS_DAYS=7
REFERRAL_PAYMENT_PERCENT=10

# Настройки кэширования
CACHE_TTL=3600

# Настройки логирования
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Настройки для разработки
DEBUG=false
SEED_DATABASE=true
